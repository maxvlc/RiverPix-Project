<p id="notice"><%= notice %></p>
<div class="row post">
  <div class="col-md-3">
    <p class="post-title">
      <h1><%= @post.title %></h1>
      <h6>Created by: <br>
        <%= avatar_image_on_post %> <br 7>
        <strong><%= @post.user.name %></strong>
        </h6>
      <small class="post-timestamp"><em><%= @post.timestamp %></em></small>
      <div class="show-btns">
        <%= social_buttons %><br>
        <% if @post.user_id == current_user.id %>
          <%= edit_post_button %>
          <%= delete_post_button %>
        <% end %>
        <%= home_button %>
      </div>
    </p>
  </div>
  <div class="col-md-9">
    <p class="post-image">
      <%= post_image_url %>
    </p>
    <p class="post-body">
      <%= @post.body %>
    </p>
  </div>
</div>
<div class="post-comments">
  <h2>Comments</h2>
    <%= render @post.comments %>
  <h2>Leave your comment:</h2>
    <%= render 'comments/form' %>
</div>